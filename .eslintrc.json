{
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "extends": ["airbnb", "plugin:react/recommended"],
  "rules": {
    "react/prefer-stateless-function": "off",
    "linebreak-style": "off",
    "no-unused-vars": "warn"
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  }
}
